generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  address   String   @unique
  createdAt DateTime @default(now())
  policies  Policy[]
  claims    Claim[]
}

model Policy {
  id               String   @id @default(uuid())
  user             User     @relation(fields: [userAddress], references: [address])
  userAddress      String
  positionSize     String   // Stored as string to handle large numbers (wei)
  leverage         Int
  liquidationPrice String
  premiumPaid      String
  txHash           String
  status           String   @default("ACTIVE") // ACTIVE, CLAIMED, EXPIRED
  createdAt        DateTime @default(now())
  claim            Claim?
}

model Claim {
  id           String   @id @default(uuid())
  user         User     @relation(fields: [userAddress], references: [address])
  userAddress  String
  policy       Policy   @relation(fields: [policyId], references: [id])
  policyId     String   @unique
  lossAmount   String
  payoutAmount String
  txHash       String?
  status       String   @default("PENDING") // PENDING, SUBMITTED, PAID, FAILED
  createdAt    DateTime @default(now())
  paidAt       DateTime?
}
